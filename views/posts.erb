<link rel="stylesheet" type="text/css" href="posts.css">

<div id="post">

<form method="POST" action="/posts" id="blog">
  <!-- <label for="body">Hi Bronies, go ahead and talk about your ponies...</label> -->
  <h1>Hey Bronies, go ahead and talk about your ponies...</h1>
  <input type="text" name="body" maxlength="150">
